# TEMPLATE - Secrets Vault (Produzione)
#
# ISTRUZIONI:
# 1. Copia questo file: cp vault.yml.template vault.yml
# 2. Sostituisci tutti i placeholder con valori reali
# 3. Cifra con Ansible Vault: ansible-vault encrypt vault.yml
# 4. NON committare vault.yml decifrato su Git!

# PostgreSQL
vault_postgresql_password: "GENERA_PASSWORD_32_CARATTERI"  # openssl rand -base64 32

# NextAuth
vault_nextauth_secret: "GENERA_SECRET_32_BYTES"  # openssl rand -base64 32
vault_nextauth_url: "https://erp.studioromano.it"

# Stripe (Produzione)
vault_stripe_publishable_key: "pk_live_XXXXXX"  # Dashboard Stripe → API Keys
vault_stripe_secret_key: "sk_live_XXXXXX"
vault_stripe_webhook_secret: "whsec_XXXXXX"  # Dashboard Stripe → Webhooks → Signing Secret

# SendGrid
vault_sendgrid_api_key: "SG.XXXXXX"  # SendGrid → API Keys → Create API Key

# OpenAI (Opzionale)
vault_openai_api_key: "sk-XXXXXX"  # OpenAI → API Keys

# Upstash Redis (Rate Limiting)
vault_upstash_redis_rest_url: "https://XXXXX.upstash.io"  # Upstash Console → Database → REST API
vault_upstash_redis_rest_token: "XXXXXX"

# Sentry (Error Tracking - Opzionale)
vault_sentry_dsn: "https://XXXXX@sentry.io/XXXXX"  # Sentry → Project Settings → Client Keys (DSN)

# Hetzner Cloud API
vault_hetzner_api_token: "HETZNER_CLOUD_API_TOKEN"  # Hetzner Console → Security → API Tokens

# Backup Encryption
vault_backup_encryption_passphrase: "GENERA_PASSPHRASE_LUNGA_64_CARATTERI"  # openssl rand -base64 48

# Hetzner Storage Box (Backup)
vault_backup_storage_box_user: "u123456"  # Hetzner → Storage Boxes → Username
vault_backup_storage_box_password: "PASSWORD_STORAGE_BOX"
vault_backup_storage_box_host: "u123456.your-storagebox.de"

# Monitoring (Grafana)
vault_grafana_admin_password: "GENERA_PASSWORD_ADMIN"  # openssl rand -base64 24

