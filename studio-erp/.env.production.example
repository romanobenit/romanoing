# ====================================
# PRODUCTION ENVIRONMENT VARIABLES - EXAMPLE
# Copia questo file in .env.production e compila con valori reali
# ====================================

# Database PostgreSQL (localhost - installato sullo stesso server)
DATABASE_URL="postgresql://studio_erp:YOUR_DB_PASSWORD@localhost:5432/studio_erp?schema=public"

# NextAuth.js
NEXTAUTH_URL="http://YOUR_SERVER_IP"
NEXTAUTH_SECRET="GENERATE_WITH_openssl_rand_base64_32"
# Per generare: openssl rand -base64 32

# Stripe LIVE (IMPORTANTE: usa chiavi LIVE, non test!)
STRIPE_SECRET_KEY="sk_live_YOUR_STRIPE_SECRET_KEY"
STRIPE_WEBHOOK_SECRET="whsec_YOUR_WEBHOOK_SECRET"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_YOUR_PUBLISHABLE_KEY"

# SendGrid Email
SENDGRID_API_KEY="SG.YOUR_SENDGRID_API_KEY"
EMAIL_FROM="noreply@studio-romano.it"

# Hetzner Object Storage (PRODUZIONE)
HETZNER_S3_ENDPOINT="https://YOUR_REGION.your-objectstorage.com"
HETZNER_S3_ACCESS_KEY="YOUR_ACCESS_KEY"
HETZNER_S3_SECRET_KEY="YOUR_SECRET_KEY"
HETZNER_S3_BUCKET="studio-erp-backups"
HETZNER_S3_REGION="eu-central-1"

# Upstash Redis (Rate Limiting) - OPZIONALE
UPSTASH_REDIS_REST_URL="https://YOUR_UPSTASH_URL"
UPSTASH_REDIS_REST_TOKEN="YOUR_UPSTASH_TOKEN"

# App Configuration
NEXT_PUBLIC_APP_URL="http://YOUR_SERVER_IP"
NEXT_PUBLIC_APP_NAME="Technical Advisory Ing. Domenico Romano"
NODE_ENV="production"

# ClamAV Antivirus - OPZIONALE
CLAMAV_HOST="localhost"
CLAMAV_PORT="3310"
